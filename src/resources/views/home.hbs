<div class="mt-4">
    <div class="row">
        {{#each products}}
        <div class="col-sm-6 col-lg-4">
            <div class="card" style="width: 18rem;">
                <a href="/products/{{this.slug}}">
                    <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/products/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">Giá hiện tại: {{this.currentPrice}} đ</p>
                    <a href="#" class="btn btn-primary">Mua hàng</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>